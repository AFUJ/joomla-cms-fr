<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams" label="JLIB_FORM_FIELD_PARAM_BASIC_LABEL">
		<fieldset name="fieldparams">
			<field
				name="buttons"
				type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="JLIB_FORM_FIELD_PARAM_EDITOR_SHOW_BUTTONS_LABEL"
				description="JLIB_FORM_FIELD_PARAM_EDITOR_SHOW_BUTTONS_DESC"
			>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field
				name="hide"
				type="text"
				default="pagebreak,readmore"
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_EDITOR_BUTTONS_HIDE_LABEL"
				description="JLIB_FORM_FIELD_PARAM_EDITOR_BUTTONS_HIDE_DESC"
			/>

			<field
				name="width"
				type="text"
				default="100%"
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_EDITOR_WIDTH_LABEL"
				description="JLIB_FORM_FIELD_PARAM_EDITOR_WIDTH_DESC"
				size="5"
			/>

			<field
				name="height"
				type="text"
				default="250px"
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_EDITOR_HEIGHT_LABEL"
				description="JLIB_FORM_FIELD_PARAM_EDITOR_HEIGHT_DESC"
				size="5"
			/>

			<field
				name="rows"
				type="text"
				default=""
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_TEXTAREA_ROWS_LABEL"
				description="JLIB_FORM_FIELD_PARAM_TEXTAREA_ROWS_DESC"
				size="5"
			/>

			<field
				name="cols"
				type="text"
				default=""
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_TEXTAREA_COLS_LABEL"
				description="JLIB_FORM_FIELD_PARAM_TEXTAREA_COLS_DESC"
				size="5"
			/>
		</fieldset>
	</fields>
</form>
