<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams" label="JLIB_FORM_FIELD_PARAM_BASIC_LABEL">
		<fieldset name="fieldparams">
			<field
				name="multiple"
				type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="JLIB_FORM_FIELD_PARAM_LIST_MULTIPLE_LABEL"
				description="JLIB_FORM_FIELD_PARAM_LIST_MULTIPLE_DESC"
			>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field
				name="first"
				type="text"
				default="1"
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_INTEGER_FIRST_LABEL"
				description="JLIB_FORM_FIELD_PARAM_INTEGER_FIRST_DESC"
				size="5"
				required="true"
			/>

			<field
				name="last"
				type="text"
				default="100"
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_INTEGER_LAST_LABEL"
				description="JLIB_FORM_FIELD_PARAM_INTEGER_LAST_DESC"
				size="5"
				required="true"
			/>

			<field
				name="step"
				type="text"
				default="1"
				class="input-xxlarge"
				label="JLIB_FORM_FIELD_PARAM_INTEGER_STEP_LABEL"
				description="JLIB_FORM_FIELD_PARAM_INTEGER_STEP_DESC"
				size="5"
				required="true"
			/>
		</fieldset>
	</fields>
</form>
