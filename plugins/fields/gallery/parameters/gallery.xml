<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field
				name="thumbnail_width"
				type="text"
				default="64"
				label="PLG_FIELDS_GALLERY_THUMBNAIL_WIDTH_LABEL"
				description="PLG_FIELDS_GALLERY_THUMBNAIL_WIDTH_DESC"
				size="5"
			/>

			<field
				name="max_width"
				type="text"
				label="PLG_FIELDS_GALLERY_MAX_WIDTH_LABEL"
				description="PLG_FIELDS_GALLERY_MAX_WIDTH_DESC"
				size="5"
			/>

			<field
				name="max_height"
				type="text"
				label="PLG_FIELDS_GALLERY_MAX_HEIGHT_LABEL"
				description="PLG_FIELDS_GALLERY_MAX_HEIGHT_DESC"
				size="5"
			/>

			<field
				name="recursive"
				type="radio"
				class="btn-group btn-group-yesno" default="1"
				label="PLG_FIELDS_GALLERY_RECURSIVE_LABEL"
				description="PLG_FIELDS_GALLERY_RECURSIVE_DESC"
			>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field
				name="multiple"
				type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="PLG_FIELDS_GALLERY_MULTIPLE_LABEL"
				description="PLG_FIELDS_GALLERY_MULTIPLE_DESC"
			>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field
				name="directory"
				type="text"
				default="images"
				class="input-xxlarge"
				label="PLG_FIELDS_GALLERY_DIRECTORY_LABEL"
				description="PLG_FIELDS_GALLERY_DIRECTORY_DESC"
			/>
		</fieldset>
	</fields>
</form>
